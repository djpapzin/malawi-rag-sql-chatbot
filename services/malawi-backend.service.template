[Unit]\nDescription=Malawi Chatbot Backend\nAfter=network.target\n\n[Service]\nType=simple\nUser=dj\nWorkingDirectory=/home/dj/chatbot-mukundi\nEnvironment=PYTHONPATH=/home/dj/chatbot-mukundi\nEnvironment=PATH=/home/dj/chatbot-mukundi/.venv/bin:/usr/local/bin:/usr/bin\nEnvironment=VIRTUAL_ENV=/home/dj/chatbot-mukundi/.venv\nEnvironmentFile=/home/dj/chatbot-mukundi/.env\nExecStart=/bin/bash -c 'cd /home/dj/chatbot-mukundi && source .venv/bin/activate && python -m uvicorn app.main:app --host 0.0.0.0 --port 8001'\nRestart=always\nRestartSec=5\nStartLimitIntervalSec=0\n\nStandardOutput=append:/var/log/malawi-backend.log\nStandardError=append:/var/log/malawi-backend.error.log\n\n[Install]\nWantedBy=multi-user.target
